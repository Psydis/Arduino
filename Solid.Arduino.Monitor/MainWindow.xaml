<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ViewModel="clr-namespace:Solid.Arduino.Monitor.ViewModel" 
        x:Class="Solid.Arduino.Monitor.MainWindow"
        Title="MainWindow" Height="350" Width="525">
  <Window.DataContext>
    <ViewModel:MainViewModel/>
  </Window.DataContext>
  <Grid>
    <Button x:Name="ConnectButton" Content="Connect" HorizontalAlignment="Left" Height="29" Margin="29,10,0,0" VerticalAlignment="Top" Width="61" ToolTip="Connect to Arduino board..." Background="#FFEDD4F9"/>
    <ListView HorizontalAlignment="Left" Height="167" Margin="157,108,0,0" VerticalAlignment="Top" Width="303" ItemBindingGroup="{Binding SerialMessages}">
      <ListView.BindingGroup>
        <BindingGroup/>
      </ListView.BindingGroup>
      <ListView.View>
        <GridView>
          <GridViewColumn/>
        </GridView>
      </ListView.View>
    </ListView>
  </Grid>
</Window>
